
<%= form_for(resource, :as => resource_name, :url =>
             session_path(resource_name), :html => {class: "form-signin"} ) do |f| %>
  <h2 class="form-signin-heading">Login</h2>

  <%= f.text_field :username, :class => "input-block-level",
      :placeholder => "username" %>

  <%= f.password_field :password, :class => "input-block-level",
      :placeholder => "password" %>

  <% if devise_mapping.rememberable? -%>
    <%= f.check_box :remember_me, :class => "checbox" %>
    <%= f.label :remember_me, :class => "checbox" %>
  <% end -%>

  <%= f.submit "Login", :class => "btn btn-large btn-primary" %>

  <nav class="sign_links">
    <%= render "devise/shared/links" %>
  </nav>
<% end %>
